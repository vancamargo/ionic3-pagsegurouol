<?xml version="1.0"?>
<!-- 
    Não recomendamos a utilização deste arquivo como referência aos endpoints do PagSeguro. 
    Para isto, consulte a documentação em dev.pagseguro.uol.com.br.
-->
<Resources>
    <path>
        <protocol>https</protocol>
        <base>
            <environment>
                <production>
                    <url>pagseguro.uol.com.br</url>
                </production>
                <sandbox>
                    <url>sandbox.pagseguro.uol.com.br</url>
                </sandbox>
            </environment>
        </base>
        <static>
            <environment>
                <production>
                    <url>stc.pagseguro.uol.com.br</url>
                </production>
                <sandbox>
                    <url>stc.sandbox.pagseguro.uol.com.br</url>
                </sandbox>
            </environment>
        </static>
        <webservice>
            <environment>
                <production>
                    <url>ws.pagseguro.uol.com.br</url>
                </production>
                <sandbox>
                    <url>ws.sandbox.pagseguro.uol.com.br</url>
                </sandbox>
            </environment>
        </webservice>
    </path>
    <services>
        <application>
            <authorization>
                <request>v2/authorizations/request</request>;
                <response>v2/authorization/request.jhtml</response>;
            </authorization>
            <search>
                <request>v2/authorizations</request>
            </search>
        </application>
        <cancel>
            <request>v2/transactions/cancels</request>
        </cancel>
        <notification>
            <application>
                <request>v2/authorizations/notifications</request>
            </application>
            <preApproval>
                <request>v2/pre-approvals/notifications</request>
            </preApproval>
            <transaction>
                <request>v3/transactions/notifications</request>;
            </transaction>
        </notification>
        <payment>
            <request>v2/checkout</request>
            <response>v2/checkout/payment.html</response>
        </payment>
        <refund>
            <request>v2/transactions/refunds</request>
        </refund>
        <session>
            <request>v2/sessions</request>
        </session>
        <installment>
            <request>v2/installments</request>
    	</installment>
        <transaction>
            <search>
                <request>v3/transactions</request>
            </search>
            <abandoned>
                <request>v2/transactions</request>
            </abandoned>
        </transaction>
        <preApproval>
            <request>v2/pre-approvals/request</request>
            <response>v2/pre-approvals/request.html</response>
            <cancel>
                <request>v2/pre-approvals/cancel</request>
            </cancel>
            <charge>
                <request>v2/pre-approvals/payment</request>
            </charge>
            <search>
                <request>v2/pre-approvals</request>
            </search>
        </preApproval>
        <directPreApproval>
            <request>pre-approvals</request>
            <accession>
                <request>pre-approvals</request>
            </accession>
            <plan>
                <request>pre-approvals/request</request>
            </plan>
            <query>
                <request>pre-approvals</request>
            </query>
            <payment>
                <request>pre-approvals/payment</request>
            </payment>
            <status>
                <request>pre-approvals</request>
            </status>
            <cancel>
                <request>pre-approvals</request>
            </cancel>
            <discount>
                <request>pre-approvals</request>
            </discount>
            <changePayment>
                <request>pre-approvals</request>
            </changePayment>
            <queryPaymentOrder>
                <request>pre-approvals</request>
            </queryPaymentOrder>
            <queryNotification>
                <request>pre-approvals/notifications</request>
            </queryNotification>
        </directPreApproval>
        <directPayment>
            <request>v2/transactions/</request>
        </directPayment>
    </services>
</Resources>
